{% extends 'mybase.html.twig' %}
{% block child_content %}
    <div class="container">
        <div class="account-area area-padding">
            <div class="row">
                <div class="col-sm-12">
                    <div class="page-title">
                        <h1>Registration</h1>
                    </div>
                    <div class="reg-form">
                        <div class="form">
                            {{ form_start(regForm) }}
                            <div class="form-group">
                                {{ form_label(regForm.email) }}<span>*</span>
                                {{ form_widget(regForm.email) }}
                                <div class="form-error">
                                    {{ form_errors(regForm.email) }}
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(regForm.plainPassword.first) }}<span>*</span>
                                {{ form_widget(regForm.plainPassword.first) }}
                                <div class="form-error">
                                    {{ form_errors(regForm.plainPassword.first) }}
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(regForm.plainPassword.second) }}<span>*</span>
                                {{ form_widget(regForm.plainPassword.second) }}
                                <div class="form-error">
                                    {{ form_errors(regForm.plainPassword.second) }}
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(regForm.captcha) }}<span>*</span>
                                {{ form_widget(regForm.captcha) }}
                                <div class="form-error">
                                    {{ form_errors(regForm.captcha) }}
                                </div>
                            </div>
                            <button type="submit" class="button"><span>Submit</span></button>
                            {{ form_rest(regForm) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}