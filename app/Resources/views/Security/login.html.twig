{% extends('mybase.html.twig') %}

{% block child_content %}
    <div class="container">
        <div class="account-area area-padding">
            <div class="row">
                <div class="col-sm-12">
                    <div class="page-title">
                        <h1>Log-in</h1>
                    </div>
                    <div class="form">
                        {% if error %}
                            <div class="form-error">{{ error.message|trans([], 'security') }}</div>
                        {% endif %}
                        <form method="post" action="{{ path('app_security_login') }}">
                            <div class="form-group">
                                <label for="username">E-mail:</label>
                                <input type = "email" name="_username" id="username" value="{{ lastUsername }}">
                            </div>
                            <div class="form-group">
                                <label>Password:
                                    <input type = "password" name="_password">
                                </label>
                            </div>
                            <div class="form-group">
                                <input class="checkbox" type="checkbox" id="remember_me" name="_remember_me" checked>
                                <label for="remember_me">Remember me</label>
                            </div>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                            <button type="submit" class="button"><span>Submit</span></button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block js %}
    {{ parent() }}
{% endblock %}