{% extends "Admin/ProductAdd.html.twig" %}

{% block child_content %}
    <div class="container">
    {% block nav_tabs %}
        {{ parent() }}
    {% endblock %}
    {{ form_start(form) }}

    {% block text_fields %}
        {{ parent() }}
        <div class="form-group">
            {{ form_label(form.waist) }}
            {{ form_errors(form.waist) }}
            {{ form_widget(form.waist, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.length) }}
            {{ form_errors(form.length) }}
            {{ form_widget(form.length, {'attr': {'class': 'form-control'}}) }}
        </div>

    {% endblock %}

    {% block photo %}
        {{ parent() }}
    {% endblock %}

    {% block submit %}
        {{ parent() }}
    {% endblock %}

{% endblock %}

{% block js %}
    {{ parent() }}
    <script src="{{ asset("js/ProductAdd/Trousers/AddRemovePhotoFields.js") }}" type="text/javascript"></script>
{% endblock %}